@using ProdavnicaLaptopova.Controllers
@model ProdavnicaLaptopova.Models.LaptopBO

@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <label class="control-label">ID</label>
                    @Html.EditorFor(bo => bo.LaptopID, new { HtmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-md-3">
                    <label class="control-label">Proizvodjac</label>
                    @Html.EditorFor(bo => bo.Proizvodjac, new { HtmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-md-3">
                    <label class="control-label">Model</label>
                    @Html.EditorFor(bo => bo.Model, new { HtmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-md-3">
                    <label class="control-label">Cena</label>
                    @Html.EditorFor(bo => bo.Cena, new { HtmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Sacuvaj promene" class="btn btn-default" />
            </div>
        </div>
    </div>
}
